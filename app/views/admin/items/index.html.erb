<div class='container'>
  <div class='row col-12'>
    <div class="col-md-12 d-flex bd-highlight mt-3 ">
        <div class='col-md-11'>
          <h5 class="p-2 bd-highlight"><span class="py-2 px-4 bg-ligh alert-secondary">商品一覧</span></h5>
        </div>

　　　</div>
　</div>
　<div class='col-md-10 ml-5'>

　  <table class="table table-hover table-inverse" >
      <thead class="thead-light">
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </thead>
    <% @items.each do |item| %>
      <tbody>
          <td><%= item.id %></td>
          <td><%= link_to item.name,admin_item_path(item.id) ,class:"text-dark border-bottom border-dark"%></td>
          <!--converting_to_jpyは桁区切りしてくれる-->
          <td>税抜金額（理解するまでまだ表示させない）<%#= converting_to_jpy(item.unit_price) %></td>
          <td><%= item.genre.name %></td>
          <% if item.is_on_sale? %>
            <td>販売中</td>
          <% else %>
            <td>販売停止</td>
          <% end %>
        </tbody>
      <% end %>
      </table>
　</div>
</div>